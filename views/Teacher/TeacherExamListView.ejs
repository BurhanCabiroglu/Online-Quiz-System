<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  
  <title>Sınavlar</title>
  <link href="../images/education.png" rel="icon">
  <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
  <link href="../css/simple-sidebar.css" rel="stylesheet">
  <style>
    div div li span{
        float: right;
    }
  </style>

  

</head>

<body>

  <div class="d-flex" id="wrapper">

    <!-- Sidebar -->
    <div class="bg-light border-right" id="sidebar-wrapper">
      <div class="sidebar-heading">Öğretmen Sistemi</div>
      <div class="list-group list-group-flush">
        <a href="dashboard" class="list-group-item list-group-item-action bg-light">Ana Sayfa</a>
        <a href="examlist" class="list-group-item list-group-item-action bg-light" style="font-weight: 800;">Sınavlar</a>
        <a href="points" class="list-group-item list-group-item-action bg-light">Öğrenci Notları</a>
        <a href="createxam" class="list-group-item list-group-item-action bg-light">Sınav Hazırla</a>
      </div>
    </div>
    <!-- /#sidebar-wrapper -->



    <!-- Page Content -->
    <div id="page-content-wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
       

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
            <li class="nav-item active">
              <a class="nav-link"><%= user.firstname+" "+user.surname +"  "%><button id="logoutBtn" class="btn btn-danger">Log out </button></a>
            </li>
          </ul>
        </div>
      </nav>

      <div class="container-fluid" id="MainContainer">
        <h1 class="mt-4">Hazırlanan Sınavlar</h1>
        <br>
        
        <div class="card mt-3">
          <div class="list-group list-group-flush">

            <% for(let i=0;i<exams.length;i++){ %> 
              <li class="list-group-item checked" >
                <%= exams[i].name %> 
                <span><button class="btn btn-secondary"  id = <%= exams[i].id  %> onclick= "deleteQuestion(this.id)">Sil</button></span> 
                <% if(exams[i].isReleased == false){ %> 

                <span style="margin: 0 1%;"><button class="btn btn-primary" id= <%= exams[i].id %> onclick= "releaseQuestion(this.id)" %> >Yayımla</button></span>  
                <% }else{ %> 
                  <span style="margin: 0 1%;"><button class="btn btn-primary" id="connectExamButton" disabled>Yayımlandı</button></span>  
                <% } %> 
              </li>
            <% } %>             
          </div>
      </div>
   

      </div>
    </div>
  </div>

  <script type="text/javascript" src="../css/script.js"></script>
  <script>
    
function deleteQuestion(id){
     
     var form = document.createElement("form")
     form.setAttribute("method", "post"); 
     
     form.setAttribute("action", "./"+id+"/delete");  
     var fn = document.createElement("button"); 
     fn.setAttribute("type", "submit"); 
     
     form.appendChild(fn)
     document.getElementsByTagName("body")[0].appendChild(form)
     fn.click()
}

function releaseQuestion(id){
     
     var form = document.createElement("form")
     form.setAttribute("method", "post"); 
     
     form.setAttribute("action", "./"+id+"/release");  
     var fn = document.createElement("button"); 
     fn.setAttribute("type", "submit"); 
     
     form.appendChild(fn)
     document.getElementsByTagName("body")[0].appendChild(form)
     fn.click()
}
  </script>
</body>

</html>